# Environment Configuration â€“ Security Settings

# ==============================================
# PRODUCTION SECURITY SETTINGS
# ==============================================
# Copy these settings to your .env file in production

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://app.elivoyages.com

# Frontend URL (exact origin for CORS + Sanctum)
FRONTEND_URL=https://clients.elivoyages.com

# Session Security
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
SESSION_LIFETIME=120

# Sanctum Token Expiration (optional, in minutes)
SANCTUM_EXPIRATION=120

# Backup Encryption (recommended)
BACKUP_ARCHIVE_PASSWORD=Merveil20@
BACKUP_MAIL_TO=admin@elivoyages.com

# Database (example for production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=eli_voyages
DB_USERNAME=admin_eli_voyages
DB_PASSWORD=Merveil20@

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.elivoyages.com
MAIL_PORT=587
MAIL_USERNAME=no-reply@elivoyages.com
MAIL_PASSWORD=Merveil20@
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@elivoyages.com
MAIL_FROM_NAME="${APP_NAME}"

# DocuSeal API
DOCUSEAL_API_KEY=your-docuseal-api-key
DOCUSEAL_API_URL=https://api.docuseal.co

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

